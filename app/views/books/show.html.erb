<h1>家計簿詳細</h1>
<table class="table table-striped">
  <tr>
    <th>年月</th>
    <td><%= @book.year %>年<%= @book.month %>月</td>
  </tr>
  <tr>
    <th>区分</th>
    <% if @book.inout == 1 %>
        <td>収入</td>
    <% else %>
        <td>支出</td>
    <% end %>
  </tr>
  <tr>
    <th>科目</th>
    <td><%= @book.category %></td>
  </tr>
  <tr>
    <th>金額</th>
    <td><%= @book.amount %>円</td>
  </tr>
</table>
<%= link_to("戻る", books_index_path, class: "btn btn-secondary") %>
<%= link_to("編集", books_edit_path(@book), class: "btn btn-warning") %>